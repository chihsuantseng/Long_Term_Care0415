@* @{
    Layout = "_Layout";
} *@
@{
    string action = ViewContext.RouteData.Values["action"]!.ToString()!;
    switch (action)
    {
        case "Edit":
            Layout = "_LayoutMember";
            break;

        case "EditCase":
            Layout = "_LayoutMember";
            break;

        case "EditEmployee":
            Layout = "_LayoutEmployee";
            break;
        default:
            Layout = "_Layout";
            break;
    }
}   